@model WebTickets.UserModel
@using (Html.BeginForm(
    "SaveRegisterData", "Register", FormMethod.Post))
{
    @Html.LabelFor(m => m.Name)
    <br />
    @Html.TextBoxFor(m => m.Name)
    <br />
    @Html.LabelFor(m => m.RuiJieId)
    <br />
    @Html.TextBoxFor(m => m.RuiJieId)
    <br />
    @Html.LabelFor(m => m.Password)
    <br />
    @Html.PasswordFor(m => m.Password)
    <br />
    <lable>确认密码</lable><br />
    <input type="password" id="confirmPassword" /><br />
    @Html.LabelFor(m => m.TelePhone)
    <br />
    @Html.TextBoxFor(m => m.TelePhone)
    <br />
    @Html.LabelFor(m => m.MobilePhone)
    <br />
    @Html.TextBoxFor(m => m.MobilePhone)
    <br />
    <input id="Role" name="Role" value="2" />
    <input id="auditUser" name="AuditStatus" value="1" />
    <input type="submit" value="提交" />
}
@section scripts{
    <script>
        $(function () {
            $("#Role").hide();
            $("#auditUser").hide();
            $("#confirmPassword").blur(function () {
                var password = $("#password").val();
                var confirmPassword = $("#confirmPassword").val();
                if (password != confirmPassword) {
                    $("#password-error-massage").show();
                    $("#submit").hide();
                } else {
                    $("#password-error-massage").hide();
                    $("#submit").show();
                }
            })
        })
    </script>
}